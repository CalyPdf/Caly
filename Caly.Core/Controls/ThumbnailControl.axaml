<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Caly.Core.Controls"
                    xmlns:vm="clr-namespace:Caly.Core.ViewModels">

    <Design.PreviewWith>
        <controls:ThumbnailControl Height="500" Width="180" />
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:ThumbnailControl}"
                  TargetType="controls:ThumbnailControl"
                  x:DataType="vm:PageViewModel">
        <Setter Property="Thumbnail" Value="{Binding Thumbnail}"/>

        <Setter Property="Template">
            <ControlTemplate>
                
                <Grid>
                    <Border BorderBrush="{StaticResource CalendarDatePickerBorderBrush}"
                            BorderThickness="2"
                            IsEnabled="{Binding IsThumbnailRendering}"
                            IsVisible="{Binding IsThumbnailRendering}"
                            Background="White"/>
                </Grid>

            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>